.single-page.clearfix
    .single-data-top
        .user-data
            img(src="{{activity.userAvatar}}", alt="User Avatar")
            span    {{activity.userName}}
        .activity-data
            h2.activity-title
              {{activity.title}}
            .activity-time
                    img(src="/images/clock.png", alt="Horario de la actividad")
                    span(ng-if="timelineDate")
                        La actividad se desarrollar√° el <strong> {{activity.date|timelineDate}}</strong>
            p.activity-description.
              {{activity.description}}

    .single-comments
        .comments-num.
            {{comments.length}} comentarios
        .user-comment
            .user-data
                img(src="/images/user_avatar.svg", alt="User Avatar")
                span    Username
            form.user-comment-input(ng-submit="submitComment()")
                .comment-area
                    textarea(placeholder="Escribe un comentario", name='text', required, ng-model='comment')
                input(type="submit", class="button") Comenta
        .other-comments
            .single-other-comment(ng-repeat="comment in comments")
                .user-avatar
                    img(src="{{comment.userAvatar}}", alt="User Avatar")
                .user-comment-text
                    p.user-data
                        <strong>{{comment.userName}}</strong> hace {{comment.date|commentDate}}
                    p.comment
                        {{comment.text}}