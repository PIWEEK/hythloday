ul.category-menu.clearfix
  li(ng-repeat="category in categories", ng-class="{selected: category.selected}")
    div
      a(ng-click="go('category', [category.id])") {{category.name}}

.clearfix.content-wrapper
  .single-activity(ng-repeat="activity in activities", ng-click="go('activity', [activity.id])")
      .user-data
          img(ng-src="{{activity.userAvatar}}", alt="User Avatar")
          span {{activity.userName}}
      .activity-data
          h2.activity-title
              a
                {{activity.title}}
            p.activity-description(ng-bind-html="activity.description|nl2br")
          .activity-time(ng-if="activity.date")
              img(src="/images/clock.png", alt="Horario de la actividad")
              
              span
                  La actividad se desarrollar√° el <strong> {{activity.date|timelineDate}} </strong>
